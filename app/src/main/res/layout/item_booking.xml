<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp"
    app:strokeColor="@color/green_hint"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header: Nama dan Status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tvNama"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Nama Pemesan"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/green_dark"/>

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status"
                android:textSize="14sp"
                android:textStyle="bold"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:textColor="@color/green_primary"
                android:background="@drawable/bg_status_tag"/>
        </LinearLayout>

        <!-- Info Lapangan -->
        <TextView
            android:id="@+id/tvLapangan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lapangan: -"
            android:textSize="14sp"
            android:layout_marginBottom="4dp"
            android:drawableStart="@drawable/ic_court_small"
            android:drawablePadding="6dp"
            android:drawableTint="@color/green_primary"/>

        <!-- Tanggal & Jam -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tvTanggal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tanggal"
                android:textSize="14sp"
                android:drawableStart="@drawable/ic_calendar_small"
                android:drawablePadding="6dp"
                android:drawableTint="@color/green_primary"/>

            <TextView
                android:id="@+id/tvJam"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Jam"
                android:textSize="14sp"
                android:drawableStart="@drawable/ic_time_small"
                android:drawablePadding="6dp"
                android:drawableTint="@color/green_primary"/>
        </LinearLayout>

        <!-- Harga -->
        <TextView
            android:id="@+id/tvTotalHarga"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total: Rp 0"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/green_dark"
            android:layout_marginBottom="12dp"
            android:drawableStart="@drawable/ic_price_small"
            android:drawablePadding="6dp"
            android:drawableTint="@color/green_primary"/>

        <!-- Spinner Status Admin -->
        <Spinner
            android:id="@+id/spinnerStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginBottom="8dp"/>

        <!-- Tombol Ubah -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnUbahStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ubah Status"
            android:visibility="gone"
            style="@style/Widget.MaterialComponents.Button"

            app:cornerRadius="12dp"
            app:icon="@drawable/ic_update"
            app:iconTint="@color/white"
            app:iconPadding="8dp"
            android:textColor="@color/white"
            android:backgroundTint="@color/green_primary"/>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
