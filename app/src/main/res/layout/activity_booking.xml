<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/rs8of481wu9"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Tombol Kembali -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnKembali"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kembali"
                android:textColor="@color/green_dark"
                android:layout_marginBottom="24dp"
                app:icon="@drawable/ic_arrow_back"
                app:iconTint="@color/green_dark"
                app:iconPadding="8dp"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <!-- Card untuk mengelompokkan form -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="12dp"
                app:strokeColor="@color/green_hint"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Nama Penyewa -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/rgyzlg0j8ec6"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:boxStrokeColor="@color/green_primary"
                        app:hintTextColor="@color/green_primary"
                        app:startIconDrawable="@drawable/ic_person"
                        app:startIconTint="@color/green_primary">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etNama"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Nama Lengkap"
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            android:enabled="false"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Tanggal Sewa -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/r90eq407ofc7"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:boxStrokeColor="@color/green_primary"
                        app:hintTextColor="@color/green_primary"
                        app:startIconDrawable="@drawable/ic_calendar"
                        app:startIconTint="@color/green_primary">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etTanggal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Pilih tanggal"
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            android:focusable="false"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Jam Mulai -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/rt1ukmmzsdgi"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:boxStrokeColor="@color/green_primary"
                        app:hintTextColor="@color/green_primary"
                        app:startIconDrawable="@drawable/ic_time"
                        app:startIconTint="@color/green_primary">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etJamMulai"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Pilih jam mulai"
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            android:focusable="false"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Jam Selesai -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/rsnkvg0tju8b"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:boxStrokeColor="@color/green_primary"
                        app:hintTextColor="@color/green_primary"
                        app:startIconDrawable="@drawable/ic_time"
                        app:startIconTint="@color/green_primary">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etJamSelesai"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Pilih jam selesai"
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            android:focusable="false"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Info Lapangan -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/rzzq50tttr3m"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:boxStrokeColor="@color/green_primary"
                        app:hintTextColor="@color/green_primary"
                        app:startIconDrawable="@drawable/ic_court"
                        app:startIconTint="@color/green_primary">

                        <TextView
                            android:id="@+id/tvLapangan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            android:paddingVertical="16dp"
                            android:paddingStart="4dp"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Total Harga -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/rwejtlt3azao"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:boxStrokeColor="@color/green_primary"
                        app:hintTextColor="@color/green_primary"
                        app:startIconDrawable="@drawable/ic_price"
                        app:startIconTint="@color/green_primary">

                        <TextView
                            android:id="@+id/tvHarga"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Rp 0"
                            android:textColor="@color/green_dark"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:paddingVertical="16dp"
                            android:paddingStart="4dp"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Metode Pembayaran -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/r98xwu0ffzjf"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:boxStrokeColor="@color/green_primary"
                        app:hintTextColor="@color/green_primary"
                        app:startIconDrawable="@drawable/ic_payment"
                        app:startIconTint="@color/green_primary">

                        <TextView
                            android:id="@+id/tvMetodePembayaran"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Cash / Transfer Bank"
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            android:paddingVertical="16dp"
                            android:paddingStart="4dp"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Tombol Booking -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBooking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Booking Sekarang"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:paddingVertical="16dp"
                app:icon="@drawable/ic_check_circle"
                app:iconTint="@android:color/white"
                app:iconPadding="8dp"
                app:backgroundTint="@color/green_primary"
                app:cornerRadius="12dp"
                app:rippleColor="@color/green_dark"
                android:elevation="4dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>